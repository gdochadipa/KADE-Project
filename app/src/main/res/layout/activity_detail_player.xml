<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailClub.DetailPlayer.DetailPlayerActivity">

        <LinearLayout

            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/image_player"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

            <TextView
                android:padding="5dp"
                android:id="@+id/name_player"
                android:textAlignment="center"
                android:text="Lionel Messi"
                android:textSize="22dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--Struktur-->
            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Weight(kg)"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/weight_player"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="1.80"
                        android:textStyle="normal"
                        android:textSize="48dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="Height(m)"
                        android:textSize="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/height_player"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:text="1.80"
                        android:textStyle="normal"
                        android:textSize="48dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </LinearLayout>
            <!--Struktur-->

            <TextView
                android:id="@+id/pos_player"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:text="FORWARD"
                android:textAllCaps="true"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/colorAccent" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:padding="10dp"
                    android:text="Hai"
                    android:textSize="16dp"
                    android:id="@+id/desc_player"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </ScrollView>



        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </RelativeLayout>




</android.support.constraint.ConstraintLayout>